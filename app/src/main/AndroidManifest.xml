<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.metacoders.assistbiker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SearchActivity"

            android:theme="@style/AppThemeNoAction">

        </activity>
        <activity
            android:name=".Activities.PreviousOrdersListActivity"
            android:theme="@style/AppThemeNoAction">

        </activity>
        <activity android:name=".Activities.AddressPaymentActivity" />
        <activity android:name=".Activities.CheckOutActivity" />
        <activity android:name=".Activities.OrderDetailsActivity" />
        <activity android:name=".Activities.EmergencyFuelActivity" />
        <activity android:name=".Activities.NewsDetailsActivity" />
        <activity
            android:name=".Activities.CartActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name=".Activities.ProductDetailActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity android:name=".Activities.OTPActivity" />
        <activity android:name=".Activities.SignupActivity" />
        <activity
            android:name=".Activities.LoginActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name=".Activities.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/AppThemeNoAction"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>